# Netlify headers file for security and performance
# https://docs.netlify.com/routing/headers/

/*
  # Security Headers
  Content-Security-Policy: default-src 'self'; img-src 'self' https://images.unsplash.com https://media.licdn.com https://upload.wikimedia.org data:; style-src 'self' 'unsafe-inline'; script-src 'self'; font-src 'self'; connect-src 'self'; frame-ancestors 'none'; base-uri 'self'; form-action 'self';
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()

  # HSTS - Force browsers to always use HTTPS
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

  # Performance Headers
  X-DNS-Prefetch-Control: on

  # Cache Control for static assets
  Cache-Control: public, max-age=31536000, immutable

# HTML files - no cache (always get fresh content)
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# CSS and JavaScript - 1 month cache
/css/*
  Cache-Control: public, max-age=2592000

/js/*
  Cache-Control: public, max-age=2592000

# Images - 1 year cache
/images/*
  Cache-Control: public, max-age=31536000, immutable

# Fonts - 1 year cache
/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# Well-known directory (security.txt, etc)
/.well-known/*
  Cache-Control: public, max-age=86400
